<script>
    document.addEventListener('DOMContentLoaded', function () {
        var carousel = $('#carouselExampleIndicators');

        carousel.on('slide.bs.carousel', function () {
            // Pause all videos when the slide changes
            carousel.find('video').each(function () {
                this.pause();
            });
        });

        // Move to the next slide when a video ends
        carousel.find('video').on('ended', function () {
            carousel.carousel('next');
        });

        // Start the video automatically when a slide becomes active
        carousel.on('slid.bs.carousel', function () {
            var currentSlide = carousel.find('.carousel-item.active');
            var video = currentSlide.find('video');
            if (video.length) {
                video[0].play();
            }
        });

        // Auto-start the first video if it's on the first slide
        var firstSlideVideo = carousel.find('.carousel-item.active video');
        if (firstSlideVideo.length) {
            firstSlideVideo[0].play();
        }
    });
</script>
