{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block body %}
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('assets/img/breadcrumb.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Bonjour {{ app.user.firstName }} {{ app.user.lastName }}</h2>
                        <div class="breadcrumb__option">
                            <a href="{{ path('app_home') }}">Accueil</a>
                            <span>Espace Statistiques</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Blog Section Begin -->
    <section class="blog spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-5">
                    <div class="blog__sidebar">
                        <div class="blog__sidebar__item">
                            <h4>Vos Statistiques</h4>
                            <ul>
                                <li><a href="{{ path('dia_bat') }}">- Les Commandes achetées</a></li>
                                <li><a href="{{ path('camembert') }}">- Les pourcentages des différentes commandes</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-7">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="{{ asset('assets/img/blog/blog-2.jpg') }}" alt="">
                                </div>
                                <div class="blog__item__text">
                                    <h5><a href="#">Les commandes achetées</a></h5>
                                    <p>
                                        Diagramme bâton pour lister toutes les commandes de l’année
                                    </p>
                                    <a href="{{ path('dia_bat') }}" class="blog__btn">Voir <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="{{ asset('assets/img/blog/blog-3.jpg') }}" alt="">
                                </div>
                                <div class="blog__item__text">
                                    <h5><a href="#">Les pourcentages des différentes commandes</a></h5>
                                    <p>
                                        Diagramme camembert avec les pourcentages des produits vendus en tant réelle
                                    </p>
                                    <a href="{{ path('camembert') }}" class="blog__btn">Voir <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog Section End -->
{% endblock %}
